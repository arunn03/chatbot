{
    "builds": [
        {
            "src": "app/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "chatbot-frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "build" }
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/app/main.py" },
        { "src": "/(.*)", "dest": "/chatbot-frontend/build/$1" }
    ]
  }
  